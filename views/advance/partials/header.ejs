<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
        crossorigin="anonymous"></script>
    <link rel="stylesheet" href="/css/global.css">
    <title>
        <%= title%>
    </title>
</head>

<body>
    <main class="container-xxl p-0" style="position: relative;">
        <section class="row flex direction-row">
            <%- include('./sidebar.ejs')%>
                <div style="padding-left: 260px;">
                    <div class="d-flex flex-row sticky-top bg-white shadow pb-2">
                        <% routers.forEach(item=>{%>
                            <a href="<%= item.pathTo%>">
                                <div
                                    class="rounded-3 p-1 ms-2 px-4 mt-2  shadow-sm <%= item.isActive ? 'bg-warning text-light' : 'bg-white'  %>">
                                    <p class="mb-0">
                                        <%= item.title%>
                                    </p>
                                </div>
                            </a>
                            <%})%>
                                <% if(query){%>
                                    <div class="col px-3 mt-1 ps-5">
                                        <form action="" method="get">
                                            <div class="form">
                                                <input type="text" style="height: 40px;" class="form-control"
                                                    name="string" id="string" value="<%= query.string%>"
                                                    placeholder="Search.." <%=query.string ? ' autofocus' : '' %>>
                                            </div>
                                        </form>
                                    </div>
                                    <%}%>
                    </div>