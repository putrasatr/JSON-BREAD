<%- include('./partials/header.ejs')%>
    <div class="mt-3 container-fluid" style="width: 100%;">
        <h1>Data</h1>
        <div class="row" style="width: 100%;">
            <%if(data.length){%>
                <% data.forEach((item,i)=>{%>
                    <% if(i % 3===0){%>
                        <div class="w-100 mt-4"></div>
                        <%}%>
                            <div class="col mx-3 card" style="width: 10%;">
                                <div class="card-body">
                                    <div class="d-flex" style="justify-content: space-between;">
                                        <p class="col">
                                            <%=item.string%>
                                        </p>
                                        <div class="col-1">
                                            <a href="advance/delete/<%=i%>">
                                                <button class="btn-sm btn-danger text-light ">X</button>
                                            </a>
                                        </div>
                                    </div>
                                    <div class="p-3 d-flex justify-content-center"
                                        style="width: 100%; border-radius: 5px; background-color: #eaeaee;">
                                        <h2 class="text-muted">
                                            <%= item.integer%>
                                        </h2>
                                    </div>
                                </div>
                                <div class="card-body">
                                    <div class="row d-flex mb-2" style="justify-content: space-between;">
                                        <small class="text-muted col">
                                            Clicked Count: <%= item.float%>
                                        </small>
                                        <button class="btn favorite" id="<%=item.id%>" style="width: 50px;">
                                            ❤️ <%=item.boolean==="true" ? "Ya" : "Tidak" %>
                                        </button>
                                    </div>
                                    <a href="advance/edit/<%=item.id%>">
                                        <button class="btn btn-warning text-light" style="width: 100%;">
                                            Edit
                                        </button>
                                    </a>
                                    <div class="d-flex" style="justify-content: right;">
                                        <small class="text-muted">
                                            <%= item["start-date"] + " / " +item["end-date"]%>
                                        </small>
                                    </div>
                                </div>
                            </div>
                            <%})}else {%>
                                <h2>Not Found [404]</h2>
                                <%}%>
        </div>
    </div>
    <%- include('./partials/footer.ejs')%>